{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "eslint": "^8.45.0",
    "hardhat": "^2.17.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "autoLintSolidity": "npx prettier --write contracts/**/**/*.sol",
    "linter": "solhint -f table contracts/**/*.sol",
    "coverage": "hardhat coverage",
    "deployToLocal": "npx hardhat run --network localhost scripts/deploy.ts",
    "deployToGoerli": "npx hardhat run --network goerli scripts/deploy.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.2",
    "dotenv": "^16.3.1",
    "erc-payable-token": "^4.9.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.4"
  }
}
